<h1><%= @list.name %></h1>
<br>
<br>
<p><strong>Movies</strong></p>
<ul class="list-group">
  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <li class="list-group-item">
      <%= movie.title %> - <%= movie.poster_url %>
    </li>
  <% end %>
</ul>
<br>
<br>
<%= link_to "Back to all lists", lists_path %>
<br>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<%= link_to "Remove this list", new_list_path, class: "btn btn-cancel",
data: {
  turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list??"
} %>
